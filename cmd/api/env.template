# Locally API Environment Variables Template
# Copy this file to .env and modify the values as needed

# =============================================================================
# DEBUG & LOGGING
# =============================================================================

# Enable debug mode (true/false)
LOCALLY_DEBUG=false

# Logging level (debug, info, warn, error)
LOCALLY_LOG_LEVEL=info

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# API server port
LOCALLY_SERVER_API_PORT=8080

# Server bind address (0.0.0.0 for all interfaces)
LOCALLY_SERVER_BIND_TO=0.0.0.0

# Base URL for the API (e.g., https://api.example.com)
LOCALLY_SERVER_BASE_URL=http://localhost:8080

# API prefix (e.g., /api/v1)
LOCALLY_SERVER_API_PREFIX=/api

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# Root user password (required for initial setup)
LOCALLY_AUTH_ROOT_PASSWORD=your-secure-root-password

# JWT authentication secret (required - change in production!)
LOCALLY_JWT_AUTH_SECRET=your-jwt-secret-key-here

# JWT issuer (optional)
LOCALLY_JWT_ISSUER=locally-api

# Encryption master secret (required - change in production!)
LOCALLY_ENCRYPTION_MASTER_SECRET=your-encryption-master-secret

# Encryption global secret (required - change in production!)
LOCALLY_ENCRYPTION_GLOBAL_SECRET=your-encryption-global-secret

# Root user username (optional, defaults to 'admin')
LOCALLY_ROOT_USER_USERNAME=admin

# Root user password (optional, defaults to auth root password)
LOCALLY_ROOT_USER_PASSWORD=your-root-user-password

# API key for service authentication (optional)
LOCALLY_API_KEY=your-api-key-here

# =============================================================================
# PASSWORD SECURITY POLICY
# =============================================================================

# Minimum password length
LOCALLY_SECURITY_PASSWORD_MIN_LENGTH=8

# Require numbers in passwords (true/false)
LOCALLY_SECURITY_PASSWORD_REQUIRE_NUMBER=true

# Require special characters in passwords (true/false)
LOCALLY_SECURITY_PASSWORD_REQUIRE_SPECIAL=true

# Require uppercase letters in passwords (true/false)
LOCALLY_SECURITY_PASSWORD_REQUIRE_UPPERCASE=true

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# Allowed origins for CORS (comma-separated)
LOCALLY_CORS_ALLOW_ORIGINS=*

# Allowed HTTP methods for CORS
LOCALLY_CORS_ALLOW_METHODS=OPTIONS,HEAD,GET,POST,PUT,PATCH,DELETE

# Allowed headers for CORS
LOCALLY_CORS_ALLOW_HEADERS=*

# Exposed headers for CORS
LOCALLY_CORS_EXPOSE_HEADERS=

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database type (sqlite/postgres)
LOCALLY_DATABASE_TYPE=sqlite

# Database storage path (for SQLite)
LOCALLY_DATABASE_STORAGE_PATH=/app/data/locally.db

# Database host (for PostgreSQL)
LOCALLY_DATABASE_HOST=localhost

# Database port (for PostgreSQL)
LOCALLY_DATABASE_PORT=5432

# Database name (for PostgreSQL)
LOCALLY_DATABASE_DATABASE=locally

# Database username (for PostgreSQL)
LOCALLY_DATABASE_USERNAME=postgres

# Database password (for PostgreSQL)
LOCALLY_DATABASE_PASSWORD=your-database-password

# Database SSL mode (for PostgreSQL - true/false)
LOCALLY_DATABASE_SSL_MODE=false

# Enable database migrations (true/false)
LOCALLY_DATABASE_MIGRATE=true

# =============================================================================
# PAGINATION
# =============================================================================

# Default page size for paginated responses
LOCALLY_PAGINATION_DEFAULT_PAGE_SIZE=20

# =============================================================================
# MESSAGE PROCESSOR CONFIGURATION
# =============================================================================

# Poll interval for message processor (e.g., "10s", "30s", "1m")
LOCALLY_MESSAGE_PROCESSOR_POLL_INTERVAL=10s

# Processing timeout for messages (e.g., "30s", "5m", "30m")
LOCALLY_MESSAGE_PROCESSOR_PROCESSING_TIMEOUT=30m

# Default maximum retries for failed messages
LOCALLY_MESSAGE_PROCESSOR_DEFAULT_MAX_RETRIES=3

# Enable message recovery (true/false)
LOCALLY_MESSAGE_PROCESSOR_RECOVERY_ENABLED=true

# Maximum processing age for orphaned messages (e.g., "5m", "1h", "2h")
LOCALLY_MESSAGE_PROCESSOR_MAX_PROCESSING_AGE=1h

# Enable message cleanup (true/false)
LOCALLY_MESSAGE_PROCESSOR_CLEANUP_ENABLED=true

# Maximum age for cleanup (e.g., "24h", "7d", "168h")
LOCALLY_MESSAGE_PROCESSOR_CLEANUP_MAX_AGE=24h

# Cleanup interval (e.g., "1h", "4h", "6h")
LOCALLY_MESSAGE_PROCESSOR_CLEANUP_INTERVAL=4h

# Keep complete messages (true/false)
LOCALLY_MESSAGE_PROCESSOR_KEEP_COMPLETE_MESSAGES=false

# Enable message processor debug mode (true/false)
LOCALLY_MESSAGE_PROCESSOR_DEBUG=false

# =============================================================================
# SEEDING & DEMO DATA
# =============================================================================

# Seed demo data on startup (true/false)
LOCALLY_SEED_DEMO_DATA=false

# =============================================================================
# PRODUCTION NOTES
# =============================================================================

# IMPORTANT: Change these values in production:
# - LOCALLY_JWT_AUTH_SECRET
# - LOCALLY_ENCRYPTION_MASTER_SECRET
# - LOCALLY_ENCRYPTION_GLOBAL_SECRET
# - LOCALLY_AUTH_ROOT_PASSWORD
# - LOCALLY_ROOT_USER_PASSWORD
# - LOCALLY_DATABASE_PASSWORD (if using PostgreSQL)

